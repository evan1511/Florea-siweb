generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MostProducts {
  id_product  String @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  nama_produk String @db.VarChar(255)
  harga       Int
  jumlah_beli Int

  product Products @relation(fields: [id_product], references: [id_product])
}

model Products {
  id_product  String @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  nama_produk String @db.VarChar(255)
  harga       Int
  image_url   String @db.VarChar(255)

  MostProducts MostProducts[]
  invoices     invoices[]
}

model customers {
  id        String @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name      String @db.VarChar(255)
  email     String @db.VarChar(255)
  image_url String @db.VarChar(255)

  invoices invoices[]
}

model invoices {
  id          String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  id_product  String   @db.Uuid
  customer_id String   @db.Uuid
  nama_produk String   @db.VarChar(255)
  harga       Int
  jumlah_beli Int
  status      String   @db.VarChar(255)
  date        DateTime @db.Date

  customer customers @relation(fields: [customer_id], references: [id])
  product  Products  @relation(fields: [id_product], references: [id_product])
}

model revenue {
  month   String @unique @db.VarChar(4)
  revenue Int
}
